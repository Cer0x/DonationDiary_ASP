@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form asp-controller="Account" asp-action="Logout" class="form-inline">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="nav-link text-light dropdown-item">
                Sign up
            </a>
    </li>
    <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="nav-link text-light dropdown-item">
                Sign in
            </a>
    </li>
}
</ul>
