@model DonationDiary_ASP.Views.ViewModels.EntryViewModel

@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Create an entry</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b>- @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DateOfDonation" class="control-label"></label>
                        <input asp-for="DateOfDonation" class="form-control" />
                        <span asp-validation-for="DateOfDonation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BloodAmount" class="control-label"></label>
                        <input asp-for="BloodAmount" class="form-control" />
                        <span asp-validation-for="BloodAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <input class="btn btn-success float-end" type="submit" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>